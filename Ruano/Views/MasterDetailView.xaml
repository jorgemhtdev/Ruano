             x:Class="Ruano.Views.MasterDetailView"
             xmlns:views="clr-namespace:Ruano.Views">
     <MasterDetailPage.Master>
        <views:MenuView Title=" " Icon="ic_navigationMenu" />
     </MasterDetailPage.Master>  
     <MasterDetailPage.Detail >
        <NavigationPage
            x:Name="Navigator"
            BarBackgroundColor="Red"
            BarTextColor="White">
            <x:Arguments>
                <views:HomeView Title="Home" />
            </x:Arguments>
        </NavigationPage>
     </MasterDetailPage.Detail>
</MasterDetailPage>
