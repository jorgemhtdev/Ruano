<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ruano.Views.Templates.PeopleTemplate">
    <ContentView.Content>
        <Grid Margin="0,10" BackgroundColor="Chocolate">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="6*" />
            </Grid.ColumnDefinitions>
           
            <Grid Grid.Column="0">
                                   
            </Grid>
            
            <StackLayout Grid.Column="1" Spacing="10" VerticalOptions="CenterAndExpand" >
            
                <Label VerticalTextAlignment="Center"
                       HorizontalTextAlignment="End"
                       Text="{Binding Name}" />
                
                <Label VerticalTextAlignment="Center"
                       HorizontalTextAlignment="End"
                       Text="{Binding Age}" />
                
                <Label VerticalTextAlignment="Center"
                       HorizontalTextAlignment="End"
                        Text="{Binding Course}" />
            </StackLayout>
        </Grid>
    </ContentView.Content>
</ContentView>
